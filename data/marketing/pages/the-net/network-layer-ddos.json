												{
													"nodeType": "text",
													"data": {
														"target": null,
														"uri": null
													},
													"value": "Shutting the window of opportunity on DDoS attacks",
													"marks": [],
													"content": null
												}
											]
										},
										{
											"nodeType": "paragraph",
											"data": {
