																	"nodeType": "text",
																	"data": {
																		"target": null,
																		"uri": null
																	},
																	"value": "A paranoid blame-free culture is a key asset. ",
																	"marks": [
																		{
																			"type": "bold"
																		}
																	],
																	"content": null
																},
