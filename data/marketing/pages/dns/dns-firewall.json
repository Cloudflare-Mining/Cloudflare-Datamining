								"contentTypeId": "elementRichText",
								"contentfulId": "5npjxnyl6GpmtGY3h4Rj65",
								"title": "What is the difference between a DNS firewall and a network firewall?",
								"htmlId": null,
								"elementPosition": null,
								"column": {
									"nodeType": "document",
									"content": [
										{
											"nodeType": "paragraph",
											"data": {
