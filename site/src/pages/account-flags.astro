---
import Layout from '../layouts/Layout.astro';
import FlagsTable from '../components/FlagsTable.astro';

const importFiles = await Astro.glob('../../../data/account/account_flags.json');
const flags = importFiles[0].default;

// manual overrides
if(flags.workers.cloudflare_pages_functions_daily_limit){
	flags.workers.cloudflare_pages_functions_daily_limit = 100000;
}
---
<Layout title="Account Flags - Cloudflare Datamining">
	<main class="m-auto max-w-5xl p-4">
		<FlagsTable title="Account Flags" data={flags} headers={["Flag", "Default Value"]}></FlagsTable>
	</main>
</Layout>

